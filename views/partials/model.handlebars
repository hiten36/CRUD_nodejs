<div class="modal fade" id="up" tabindex="-1" aria-labelledby="upLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="upLabel">Update Note</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
        <form method="POST" action="update">
            <div class="modal-body">
                <input type="hidden" id="up-hid" name="up_hid">
                <div class="mb-3">
                    <label for="name1" class="form-label">Note title</label>
                    <input type="text" class="form-control" id="name1" name="title1" placeholder="Enter title">
                </div>
                <div class="mb-3">
                    <label for="desc1" class="form-label">Note Description</label>
                    <textarea class="form-control" id="desc1" name="desc1" placeholder="Enter description" rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>
  </div>
</div>